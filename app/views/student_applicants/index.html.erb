<h1>New Student Applications</h1>

</br>
</br>
</br>


<table class="table student_applicants_table">
  <thead>
    <tr class="table_head">
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">D.O.B.</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
    <%  @student_applicants.each do |student_applicant|  %>
        <tr class="student">
            <th scope="row"><%= @i %></th>
            <td><%= student_applicant.first_name %></td>
            <td><%= student_applicant.last_name %></td>
            <td><%= student_applicant.DOB %></td>
            <td><a href="mailto: <%= student_applicant.email %>"><%= student_applicant.email %></a></td>
            <td>
                <a href="/student_applicants/<%= student_applicant.id %>">
                    <button class="btn btn-sm btn-outline-primary">
                        view
                    </button>
                </a>
            </td>
            <td>
               

                <%= form_tag("/student_applicants/#{student_applicant.id}", method: "delete", remote: true, confirm: "are you sure") do %>
                    <%= submit_tag("delete", class: "btn btn-sm btn-outline-danger") %>
                <% end %>
            </td>
        </tr>
        <% @i += 1 %>
    <% end %>
  </tbody>
</table>