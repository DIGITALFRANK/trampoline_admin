
<h1>edit info for your instructor <span class="instructor_name"><%= @instructor.first_name + " " + @instructor.last_name %></span> </h1>

<%= bootstrap_form_for(@instructor) do |f| %>
    <%= f.text_field :img_url, label: "profile img url" %>
    <%= f.text_field :first_name, label: "first name" %>
    <%= f.text_field :last_name, label: "last name" %>
    <%= f.date_field :DOB, label: "date of birth" %>
    <%= f.text_field :edu_level, label: "education level" %>
    <%= f.text_field :expertise, label: "expertise" %>
    <%= f.text_field :position, label: "position" %>
    <%= f.date_field :hire_date, label: "hire date" %>
    <%= f.number_field :salary, label: "salary" %>

    <%= f.email_field :email %>
    <%# f.password_field :password %>

    <%# this will be hidden and automatically set to the session[:id] (the id of the current Admin user) %>
    <%= f.number_field :admin_id, label: "admin id" %>

    <%= f.submit "update instructor info", class: "btn create_btn"%>
	</br>
    </br>

    <a href="/instructors/new"><button class="btn btn-primary add_ppl_btn">create new instructor</button></a>

    </br>
    </br>
<% end %>


