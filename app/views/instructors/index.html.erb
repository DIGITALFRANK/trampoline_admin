<table class="table instructors_table">
  <thead>
    <tr class="table_head">
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Expertise</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
    <%  @instructors.each do |instructor|  %>
        <tr class="student">
            <th scope="row"><%= @i %></th>
            <td><%= instructor.first_name %></td>
            <td><%= instructor.last_name %></td>
            <td><%= instructor.expertise %></td>
            <td><a href="mailto: <%= instructor.email %>"><%= instructor.email %></a></td>
            <% if admin_signed_in? %>
                <td>
                    <a href="/instructors/<%= instructor.id %>/edit">
                        <button class="btn btn-sm btn-outline-primary">
                            edit
                        </button>
                    </a>
                </td>
                <td>
                

                    <%= form_tag("/instructors/#{instructor.id}", method: "delete", remote: true, confirm: "are you sure") do %>
                        <%= submit_tag("delete", class: "btn btn-sm btn-outline-danger") %>
                    <% end %>
                </td>
            <% end %>
        </tr>
        <% @i += 1 %>
    <% end %>
  </tbody>
</table>