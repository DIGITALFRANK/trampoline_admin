<h1>update <span class="edit_cohort_name"> <%= @cohort.name %> </span></h1>

<%= bootstrap_form_for(@cohort) do |f| %>
    <%= f.form_group :fulltime, label: { text: "fulltime?" } do %>
        <%= f.radio_button :fulltime, true, label: "true" %>
        <%= f.radio_button :fulltime, false, label: "false" %>
    <% end %>
    
    <%= f.text_field :name, label: "cohort name (course name, start month/year)" %>
    <%= f.date_field :start_date, label: "start date" %>
    <%= f.date_field :end_date, label: "end date" %>
    <%= f.text_field :days_hours, label: "cohort days & hours (days or days range, hours range)" %>

    <%# this will be hidden and automatically set to the session[:id] (the id of the current Admin user) %>
    <%= f.number_field :admin_id, label: "admin id" %>

    <%= f.number_field :course_id, label: "course id" %>
    <%= f.number_field :instructor_id, label: "instructor id" %>

    <%= f.submit "update cohort", class: "btn create_btn"%>

    </br>
    </br>

    <a href="#"><button class="btn btn-primary add_btn">add students</button></a>

    </br>
    </br>

<% end %>

<div class="delete">
<%= form_tag("/cohorts/#{params[:id]}", method: "delete") do %>
<%= submit_tag("delete this cohort", class: "btn btn-danger delete_btn") %>
<% end %>
</div>