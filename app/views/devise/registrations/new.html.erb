
<% header "Create Your Application" %>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <div id="warnings" role="alert" data-dismiss="alert">
      <%= devise_error_messages! %>
  </div>

  <%= f.text_field :type, label: "application type" %>
  <%= f.text_field :first_name, label: "first name" %>
  <%= f.email_field :email, class: 'form-control' %>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    <% if @validatable %>
      <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
    <% end %>
  </div>
  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>

  <%= f.submit "create application", class: 'btn btn-warning btn-sm create_acc_btn' %>
<% end %>

<%= render "devise/shared/links" %>
